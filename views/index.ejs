<%- include('layouts/boilerplate.ejs') %>
<body>
  <div class="container">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% items.forEach(item => { %>
      <div class="card" style="width: 20rem;">
        <img src="<%= item.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <p class="card-text">Name : <%= item.name %></p>
          <p class="class-text">type: <%= item.type %></p>
          <p>Contact: <%= item.contact %></p>
          <small><%= item.date.toDateString() %></small>
        </div>
        <form method="GET" action="/<%=item._id%>">
        <button class="btn btn-success" type="submit" style="background-color: #c6def1; color: black;">
          My_Item
        </button>
      </form>
      </div>
      <% }) %>
  </div>
 

</div>
</body>
</html>